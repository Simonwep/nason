{
    "name": "nason",
    "version": "1.3.0",
    "description": "Ultra tiny serializer with customizable encoders.",
    "main": "./lib/nason.min.js",
    "module": "./lib/nason.min.mjs",
    "types": "./lib/nason.min.d.ts",
    "author": "Simon Reinisch <trash@reinisch.io>",
    "license": "MIT",
    "keywords": [
        "encoding",
        "binary",
        "json",
        "bson",
        "serialization"
    ],
    "homepage": "https://github.com/Simonwep/nason#readme",
    "repository": "https://github.com/Simonwep/nason.git",
    "bugs": "https://github.com/Simonwep/nason/issues",
    "scripts": {
        "build": "cross-env NODE_ENV=production rollup -c rollup.config.js",
        "build:watch": "cross-env NODE_ENV=development rollup -c rollup.config.js --watch",
        "lint": "eslint ./src/**/*.ts ./test/**/*.ts",
        "lint:fix": "npm run lint -- --fix",
        "test": "jest --runInBand",
        "test:watch": "jest --runInBand --watchAll",
        "test:coverage": "jest --runInBand --coverage",
        "ci:dryrun": "npm run lint:fix && npm run test && npm run build"
    },
    "files": [
        "src",
        "lib"
    ],
    "devDependencies": {
        "@babel/core": "^7.15.0",
        "@babel/preset-env": "^7.15.0",
        "@babel/preset-typescript": "^7.15.0",
        "@rollup/plugin-replace": "^3.0.0",
        "@types/jest": "^27.0.1",
        "@types/node": "^16.7.10",
        "@typescript-eslint/eslint-plugin": "^4.30.0",
        "@typescript-eslint/parser": "^4.30.0",
        "@wessberg/rollup-plugin-ts": "^1.1.55",
        "babel-jest": "^27.1.0",
        "cross-env": "^7.0.3",
        "eslint": "^7.32.0",
        "eslint-config-simon": "^2.1.0",
        "jest": "^27.1.0",
        "rollup": "^2.56.3",
        "rollup-plugin-terser": "^7.0.2",
        "typescript": "^4.4.2"
    }
}
