        "@types/jest": "^25.1.4",
        "@types/node": "^13.11.0",
        "@typescript-eslint/eslint-plugin": "^2.26.0",
        "@typescript-eslint/parser": "^2.26.0",
        "babel-jest": "^25.2.4",
        "eslint": "^6.8.0",
        "eslint-config-simon": "^1.3.0",
        "jest": "^25.2.4",
